<table class="table">
	<tr><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

	<tr>
		<th>name</th>
		<th><%= @user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= @user.introduction %></th>
	</tr>

	<tr>
		<th>follows</th>
		<th><%= link_to @user.follower.count,following_user_path(@user) %></th>
	</tr>
	<tr>
		<th>followers</th>
		<th><%= link_to @user.followed.count, followers_user_path(@user) %></th>
	</tr>

	  <tr>
	  	<td><% if @user != current_user %>
           <% if current_user.following?(@user) %>
             <%= link_to 'フォローを外す', user_relationships_path(@user.id), class: 'btn-sm btn-primary', method: :delete %>
           <% else %>
             <%= link_to 'フォローする', user_relationships_path(@user.id), class: "btn-sm btn-success", method: :post %>
           <% end %>
         <% end %>
      </td>
    </tr>
</table>

<div class="row">
	<%= link_to '', edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>
</div>